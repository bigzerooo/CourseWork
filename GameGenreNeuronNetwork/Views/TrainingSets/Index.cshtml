@model List<GameGenreNeuronNetwork.Models.ViewModels.TrainingSetExtended>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            @if (Model.Count>0)
            {
                @foreach (var aspect in Model[0].GameAspects)
                {
                    <th>
                        @aspect.Name
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @foreach(var aspect in item.GameAspects)
                {
                    <td>
                        <p>@aspect.Value</p>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>